<div class="container m-3">
  <h1>My tasks</h1>
  <ul class="list-group">
    <% @tasks.each do |task| %>
      <li class="list-group-item list-group-item-action">
      <% if task.completed %>
        <i class="fa-solid fa-check text-success"></i>
      <% else %>
         <i class="fa-solid fa-xmark text-danger"></i>
      <% end %>
      <%= link_to task[:title], task_path(task[:id]), class: "card-link" %>
      &nbsp;
      <%= link_to "Delete", task_path(task[:id]), data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"} %>
      &nbsp;
      </li>
    <% end %>
  </ul>
<%= link_to "Create a new task", tasks_new_path, class: "btn btn-primary mt-3" %>
</div>

